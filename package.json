{
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "lint": "npm run eslint:check && npm run styles:check && npm run format:check",
    "eslint:check": "eslint . --ext .js,.ts,.vue --max-warnings=0",
    "styles:check": "stylelint \"./**/*.{css,vue}\" --ignore-path=.gitignore",
    "format:check": "prettier \"./**\" --check --ignore-unknown",
    "build": "nuxt build",
    "gh:deploy": "npm run build && gh-pages -d dist -t true",
    "postinstall": "nuxt prepare"
  },
  "devDependencies": {
    "@lehoczky/eslint-config-vue": "^0.0.18",
    "@nuxt/content": "^2.7.0",
    "@nuxtjs/google-fonts": "^3.0.1",
    "@types/lodash-es": "^4.17.7",
    "@types/prettier": "^2.7.3",
    "@vueuse/core": "^10.2.1",
    "@vueuse/nuxt": "^10.2.1",
    "eslint": "^8.44.0",
    "eslint-define-config": "^1.21.0",
    "gh-pages": "github:Lehoczky/gh-pages",
    "nuxt": "^3.6.2",
    "nuxt-simple-robots": "^3.0.2",
    "nuxt-simple-sitemap": "^3.0.8",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "stylelint": "^15.10.1",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "packageManager": "pnpm@8.6.6"
}

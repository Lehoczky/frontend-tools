{
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "lint": "npm run eslint:check && npm run styles:check && npm run format:check",
    "eslint:check": "eslint . --ext .js,.ts,.vue --max-warnings=0",
    "styles:check": "stylelint \"./**/*.{css,vue}\" --ignore-path=.gitignore",
    "format:check": "prettier \"./**\" --check --ignore-unknown",
    "format:write": "prettier \"./**\" --write --ignore-unknown",
    "build": "nuxt build",
    "gh:deploy": "npm run build && gh-pages -d dist -t true",
    "postinstall": "nuxt prepare"
  },
  "devDependencies": {
    "@lehoczky/eslint-config-vue": "^0.0.18",
    "@nuxt/content": "^2.7.2",
    "@nuxtjs/google-fonts": "^3.0.2",
    "@types/lodash-es": "^4.17.8",
    "@vueuse/core": "^10.4.0",
    "@vueuse/nuxt": "^10.4.0",
    "eslint": "^8.48.0",
    "eslint-define-config": "^1.23.0",
    "gh-pages": "github:Lehoczky/gh-pages",
    "nuxt": "~3.6.5",
    "nuxt-simple-robots": "^3.1.2",
    "nuxt-simple-sitemap": "^3.2.6",
    "postcss-html": "^1.5.0",
    "postcss-preset-env": "^9.1.1",
    "prettier": "^3.0.2",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.1.6"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "packageManager": "pnpm@8.7.0"
}

{
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "lint": "npm run eslint:check && npm run styles:check && npm run format:check",
    "eslint:check": "eslint . --ext .js,.ts,.vue --max-warnings=0",
    "styles:check": "stylelint \"./**/*.{css,vue}\" --ignore-path=.gitignore",
    "format:check": "prettier \"./**\" --check --ignore-unknown",
    "generate": "nuxt generate",
    "gh:deploy": "npm run generate && gh-pages -d dist -t true",
    "postinstall": "nuxt prepare"
  },
  "devDependencies": {
    "@lehoczky/eslint-config-vue": "^0.0.16",
    "@nuxt/content": "^2.6.0",
    "@nuxtjs/google-fonts": "^3.0.0",
    "@types/lodash-es": "^4.17.7",
    "@types/prettier": "^2.7.2",
    "@vueuse/core": "^10.1.2",
    "@vueuse/nuxt": "^10.1.2",
    "eslint": "^8.40.0",
    "eslint-define-config": "^1.20.0",
    "gh-pages": "^5.0.0",
    "nuxt": "^3.4.3",
    "nuxt-simple-robots": "^2.3.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "stylelint": "^15.6.1",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "packageManager": "pnpm@8.5.0"
}

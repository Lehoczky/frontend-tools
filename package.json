{
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "lint": "npm run eslint:check && npm run styles:check && npm run format:check",
    "eslint:check": "eslint . --ext .js,.ts,.vue --max-warnings=0",
    "styles:check": "stylelint \"./**/*.{css,vue}\" --ignore-path=.gitignore",
    "format:check": "prettier \"./**\" --check --ignore-path=.gitignore --ignore-unknown",
    "generate": "cross-env NODE_ENV=production nuxt generate",
    "preview": "serve .output/public",
    "deploy": "gh-pages -d dist -t true"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vueuse/core": "^8.4.2",
    "@vueuse/nuxt": "^8.4.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "gh-pages": "^4.0.0",
    "nuxt": "3.0.0-rc.3",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "serve": "^13.0.2",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^25.0.0",
    "tailwindcss-fluid-type": "^1.3.3"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  }
}

{
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "lint": "npm run eslint:check && npm run styles:check && npm run format:check",
    "eslint:check": "eslint . --ext .js,.ts,.vue --max-warnings=0",
    "styles:check": "stylelint \"./**/*.{css,vue}\" --ignore-path=.gitignore",
    "format:check": "prettier \"./**\" --check --ignore-unknown",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "gh:deploy": "npm run generate && gh-pages -d dist -t true"
  },
  "devDependencies": {
    "@lehoczky/eslint-config-vue": "^0.0.14",
    "@nuxt/content": "^2.5.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/lodash-es": "^4.17.7",
    "@vueuse/core": "^9.13.0",
    "@vueuse/nuxt": "^9.13.0",
    "eslint": "^8.38.0",
    "eslint-define-config": "^1.17.0",
    "gh-pages": "^5.0.0",
    "nuxt": "^3.4.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "stylelint": "^15.4.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^32.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "packageManager": "pnpm@8.2.0",
  "pnpm": {
    "overrides": {
      "consola": "3.0.1"
    }
  }
}
